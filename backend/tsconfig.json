{
    "compilerOptions": {
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "target": "es2017",
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
    },
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node",
    }
}